<%= form_for @listing do |form| %>
<div class="text-field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
</div>

<div class="text-field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
</div>

<div class="text-field">
    <%= form.label :kind %>
    <%= form.text_area :kind, class: "form-control" %>
</div>

<div class="text-field">
    <%= form.label :accomodation %>
    <%= form.text_area :accomodation, class: "form-control" %>
</div>

<div class="text-field">
    <%= form.label :country %>
    <%= form.text_area :country, class: "form-control" %>
</div>

<div class="text-field">
  <%= form.label :city %>
    <%= form.text_area :city, class: "form-control" %>
</div>

<div class="text-field">
    <%= form.label "street number, street name, and zip code" %>
    <%= form.text_area :address, class: "form-control" %>
</div>

<div class="number-field">
    <%= form.label "Price Per Day" %>
    <%= form.number_field :price, in: 5...1000, step: 0.01, class: "form-control" %>
</div>

<div class="number-field">
    <%= form.label "possible amount of guests" %>
    <%= form.number_field :guest, in: 1...17, value: 1, class: "form-control"%>
</div>

<div class="number-field">
    <%= form.label :bedrooms %>
    <%= form.number_field :bedrooms, in: 0...17, value: 0, class: "form-control"%>
</div>

<div class="number-field">
    <%= form.label :beds %>
    <%= form.number_field :beds, in: 1...17, value: 1, class: "form-control" %>
</div>

<div class="number-field">
    <%= form.label :bathrooms %>
    <%= form.number_field :bathrooms, in: 1...17, step: 0.5, class: "form-control" %>
</div>

<div class="date-field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control" %>
</div>

<div class="date-field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: "form-control" %>
</div>

<div class="file-field">
    <%= form.label :photos %>
    <%= form.file_field :photos, multiple: true, class: "form-control" %>
</div>

<div class="check-box-field">
  <% Tag.all.each do |tag| %>
  <%= check_box_tag "listing[tag_ids][]", tag.id %>
  <%= tag.name %><br>
  <% end %>


<div class="submit-field">
    <%= form.submit %>
</div>
<% end %>
<p><%=link_to "Home", user_path(current_user)%> <%=link_to "Index", listings_path%></p>
